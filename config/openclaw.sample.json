{
  "_comment": "oh-my-openclaw 에이전트별 도구 제한 설정 예시 (openclaw.json에 병합)",
  "_docs": "https://docs.openclaw.ai/tools#tool-profiles-base-allowlist",

  "tools": {
    "profile": "coding"
  },

  "agents": {
    "list": [
      {
        "id": "oracle",
        "description": "Read-only architect/debugger. No file writes or agent spawns.",
        "tools": {
          "profile": "coding",
          "deny": ["write", "edit", "apply_patch", "sessions_spawn"]
        }
      },
      {
        "id": "librarian",
        "description": "Documentation specialist. Read + web search only.",
        "tools": {
          "allow": [
            "read",
            "exec",
            "web_search",
            "web_fetch",
            "memory_search",
            "memory_get",
            "sessions_list",
            "sessions_history",
            "session_status"
          ]
        }
      },
      {
        "id": "explore",
        "description": "Codebase search specialist. Read + exec only.",
        "tools": {
          "allow": [
            "read",
            "exec",
            "process",
            "memory_search",
            "memory_get",
            "session_status"
          ]
        }
      },
      {
        "id": "multimodal-looker",
        "description": "Visual analysis. Read + image + browser only.",
        "tools": {
          "allow": ["read", "image", "group:ui", "exec", "session_status"]
        }
      },
      {
        "id": "metis",
        "description": "Pre-planning consultant. Read-only analysis.",
        "tools": {
          "profile": "coding",
          "deny": ["write", "edit", "apply_patch", "sessions_spawn"]
        }
      },
      {
        "id": "momus",
        "description": "Plan reviewer. Read-only critique.",
        "tools": {
          "profile": "coding",
          "deny": ["write", "edit", "apply_patch", "sessions_spawn"]
        }
      },
      {
        "id": "sisyphus-junior",
        "description": "Primary worker. Full coding access.",
        "tools": {
          "profile": "coding"
        },
        "subagents": {
          "allowAgents": ["explore", "librarian", "oracle"]
        }
      },
      {
        "id": "hephaestus",
        "description": "Deep autonomous worker. Full access.",
        "tools": {
          "profile": "full"
        },
        "subagents": {
          "allowAgents": ["explore", "librarian", "oracle"]
        }
      },
      {
        "id": "atlas",
        "description": "Orchestrator. Can spawn sub-agents.",
        "tools": {
          "profile": "coding"
        },
        "subagents": {
          "allowAgents": ["*"]
        }
      },
      {
        "id": "prometheus",
        "description": "Strategic planner. Read + write plans only.",
        "tools": {
          "allow": [
            "read",
            "write",
            "exec",
            "memory_search",
            "memory_get",
            "web_search",
            "web_fetch",
            "session_status"
          ]
        }
      }
    ]
  }
}
