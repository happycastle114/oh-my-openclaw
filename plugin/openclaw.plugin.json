{
  "id": "oh-my-openclaw",
  "name": "Oh-My-OpenClaw",
  "description": "Multi-agent orchestration plugin \u2014 10 agents, category-based model routing, todo enforcer, ralph loop, and custom tools",
  "version": "0.2.2",
  "skills": ["skills"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "max_ralph_iterations": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "default": 10,
        "description": "Maximum ralph loop iterations per session (hard cap: 100)"
      },
      "todo_enforcer_enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable todo continuation injection on agent bootstrap"
      },
      "todo_enforcer_cooldown_ms": {
        "type": "integer",
        "minimum": 1,
        "default": 2000,
        "description": "Cooldown between todo enforcer injections (ms)"
      },
      "todo_enforcer_max_failures": {
        "type": "integer",
        "minimum": 1,
        "default": 5,
        "description": "Max consecutive failures before disabling todo enforcer"
      },
      "comment_checker_enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable AI slop comment detection on tool results"
      },
      "notepad_dir": {
        "type": "string",
        "default": "workspace/notepads",
        "description": "Directory for wisdom accumulation notepads"
      },
      "plans_dir": {
        "type": "string",
        "default": "workspace/plans",
        "description": "Directory for plan storage"
      },
      "checkpoint_dir": {
        "type": "string",
        "default": "workspace/checkpoints",
        "description": "Directory for execution checkpoints"
      }
    }
  },
  "uiHints": {
    "max_ralph_iterations": { "label": "Ralph Loop Max Iterations" },
    "todo_enforcer_enabled": { "label": "Todo Enforcer" },
    "todo_enforcer_cooldown_ms": { "label": "Todo Enforcer Cooldown (ms)" },
    "todo_enforcer_max_failures": { "label": "Todo Enforcer Max Failures" },
    "comment_checker_enabled": { "label": "Comment Checker" },
    "notepad_dir": { "label": "Notepads Directory" },
    "plans_dir": { "label": "Plans Directory" },
    "checkpoint_dir": { "label": "Checkpoints Directory" }
  }
}